# IHACPA v2.0 Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# Azure OpenAI Configuration (Primary)
# =============================================================================
# Your Azure OpenAI resource endpoint
AZURE_OPENAI_ENDPOINT=https://automation-seanchen.openai.azure.com/

# Your Azure OpenAI API key
AZURE_OPENAI_KEY=your-azure-openai-key-here

# Your deployment name (as configured in Azure)
AZURE_OPENAI_MODEL=gpt-4.1

# Azure OpenAI API version
AZURE_OPENAI_API_VERSION=2025-01-01-preview

# =============================================================================
# Alternative AI Providers (Optional)
# =============================================================================
# OpenAI API (if you want to use standard OpenAI instead of Azure)
# OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Claude API (optional)
# ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis connection URL
REDIS_URL=redis://localhost:6379

# Redis database number (0-15)
REDIS_DB=0

# =============================================================================
# Application Settings
# =============================================================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Enable debug logging
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# Performance Tuning
# =============================================================================
# Maximum concurrent scans
MAX_CONCURRENT_SCANS=10

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Cache TTL in seconds
CACHE_TTL=3600

# =============================================================================
# Security Settings
# =============================================================================
# Enable rate limiting
ENABLE_RATE_LIMITING=true

# Enable secure headers
ENABLE_SECURE_HEADERS=true

# =============================================================================
# Optional API Keys for Enhanced Features
# =============================================================================
# NVD API Key (optional, increases rate limits)
# NVD_API_KEY=your-nvd-api-key-here

# SNYK API Token (optional, for SNYK API instead of web scraping)
# SNYK_API_TOKEN=your-snyk-api-token-here

# GitHub Personal Access Token (optional, for GitHub Advisory API)
# GITHUB_TOKEN=your-github-token-here